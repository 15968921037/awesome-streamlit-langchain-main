name: Upgrade SQLite

on:
  push:
    branches:
      - main

jobs:
  upgrade-sqlite:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Update and upgrade system packages
        run: |
          sudo apt-get update
          sudo apt-get install -y sqlite3
      
      - name: Verify SQLite version
        run: sqlite3 --version
